{
  "extends": [
    "config:best-practices",
    ":timezone(Asia/Tokyo)",
    ":automergePatch"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "digest": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^@types/"
      ],
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "groupName": "linters",
      "extends": [
        "packages:linters",
        ":automergeMinor"
      ],
      "matchPackagePatterns": [
        "^@typescript-eslint/"
      ]
    },
    {
      "groupName": "typescript",
      "extends": [
        ":automergeMinor"
      ],
      "matchPackagePatterns": [
        "typescript"
      ]
    }
  ]
}